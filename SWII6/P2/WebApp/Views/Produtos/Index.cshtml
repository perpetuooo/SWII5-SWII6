@model IEnumerable<WebApp.Models.Produto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Produtos";
}

<div class="card border-0">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">Produtos</h2>
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Adicionar Produto
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Nome</th>
                        <th>Preço</th>
                        <th>Status</th>
                        <th width="150">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var produto in Model)
                    {
                        <tr>
                            <td>@produto.Nome</td>
                            <td>@produto.Preco.ToString("C")</td>
                            <td>
                                <span class="badge @(produto.Status ? "bg-success" : "bg-danger")">
                                    @(produto.Status ? "Ativo" : "Inativo")
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = produto.Id })" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = produto.Id })" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>